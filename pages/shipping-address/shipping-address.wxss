page {
    background-color: #F8F8F8;
}

.content-scroll {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 90rpx;
    left: 0;
}

.weui-media-box {
    padding-left: 10rpx;
    padding-right: 0;
}

.weui-media-box_appmsg .weui-media-box__hd {
    margin-right: .4em;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #D1D1D1;
    font-size: 50rpx;
}

.weui-cell__trash {
    text-align: right;
    color: #dddddd;
    padding: 30rpx;
    font-size: 40rpx;
}

.weui-cell__trash:active {
    color: #CFB76B;
}

.input-checked {
    color: #CFB76B;
}

.input-checked:before {
    content: "\f3ff";
}

.tabbar {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 90rpx;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.add-btn {
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    border: 0;
    color: #E3393C;
    background: #ffffff;
    border-radius: 0;
}

.add-btn::after {
    display: none;
}

.add-btn.button-hover {
    background-color: #efefef;
}