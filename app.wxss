.divider-line {
    position: relative;
    height: 2rpx;
}

.divider-line:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 2rpx;
    border-bottom: 2rpx solid #d9d9d9;
    color: #d9d9d9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}


/* tab */

.my-tab {
    height: auto;
    background: #ffffff;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.my-navbar {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.my-navbar__item {
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 20rpx 0;
    text-align: center;
    font-size: 28rpx;
}

.my-navbar__item::after {
    content: " ";
    position: absolute;
    left: 0;
    right: 0;
    height: 1px;
    color: #d9d9d9;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    bottom: 0;
    border-bottom: 1px solid #d9d9d9;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
}

.my-navbar__item_on {
    color: #CFB76B;
}

.my-navbar__item_on::after {
    border-bottom: 4px solid #CFB76B;
}

.my-tab__panel {
    min-height: 200rpx;
    background: #ffffff;
}


