/* 商品加减 */

.number-box {
    width: 200rpx;
    height: 60rpx;
    border-radius: 60rpx;
    background: #efeff4;
    text-align: center;
    line-height: 60rpx;
    color: #CFB76B;
}

.number-box .plus-btn {
    float: right;
}

.number-box .minus-btn {
    float: left;
}

.number-box .plus-btn,
.number-box .minus-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    padding: 0;
    margin: 0;
    line-height: 58rpx;
    text-align: center;
    font-weight: 700;
    border: 1px solid #dcdcdc;
    color: #888;
    background: #ffffff;
}

.number-box .plus-btn::after,
.number-box .minus-btn::after {
    display: none;
}

.number-box .plus-btn.button-hover,
.number-box .minus-btn.button-hover {
    border-color: #CFB76B;
    color: #CFB76B;
}